<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_artists"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.android.projectfour.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/banner_single"
            style="@style/MainBannerStyle"
            android:src="@drawable/single" />

        <TextView
            style="@style/MainHeaderTextStyle"
            android:text="@string/popular_singer" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/avatar_wf"
                style="@style/MainArtistListStyle"
                android:src="@drawable/avatar_wf1" />

            <ImageView
                android:id="@+id/avatar_cyx"
                style="@style/MainArtistListStyle"
                android:src="@drawable/avatar_cyx1" />

            <ImageView
                android:id="@+id/avatar_zjl"
                style="@style/MainArtistListStyle"
                android:src="@drawable/avatar_zjl1" />
        </LinearLayout>


        <TextView
            style="@style/MainHeaderTextStyle"
            android:text="@string/recommendation" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/album_zjl_12"
                style="@style/MainAlbumListStyle"
                android:src="@drawable/album_zjl_sexz" />

            <ImageView
                android:id="@+id/album_zjl_ksd"
                style="@style/MainAlbumListStyle"
                android:src="@drawable/album_zjl_ksd" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/album_cyx_rlb"
                style="@style/MainAlbumListStyle"
                android:src="@drawable/album_cyx_rlb" />

            <ImageView
                android:id="@+id/album_cyx_bxfs"
                style="@style/MainAlbumListStyle"
                android:src="@drawable/album_cyx_bxfs" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/album_wf_zqc"
                style="@style/MainAlbumListStyle"
                android:src="@drawable/album_wf_zqc" />

            <ImageView
                android:id="@+id/album_wf_fccq"
                style="@style/MainAlbumListStyle"
                android:src="@drawable/album_wf_fccq" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>

